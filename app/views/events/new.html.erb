<h1>Create your event here</h1>

<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :event_location %><br>
    <%= form.text_field :event_location %>
  </div>

  <div>
    <%= form.label :event_date %><br>
    <%= form.datetime_field :event_date %>
  </div>

  <div>
    <%= form.submit :submit %>
  </div>
<% end %>